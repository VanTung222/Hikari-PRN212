<Window x:Class="HikariApp.Teacher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hikari - Japanese Learning Management System" 
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF4A90E2"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2E6DA4"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF1E4A6B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2E5AA8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="#FFF8F9FA" 
            CornerRadius="15" 
            BorderBrush="#FFDDDDDD" 
            BorderThickness="2" 
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Gray" 
                            Direction="270" 
                            ShadowDepth="8" 
                            Opacity="0.3" 
                            BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" 
                    Background="#FF3366CC" 
                    CornerRadius="15,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Logo Section -->
                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                Margin="20,30,20,40"
                                HorizontalAlignment="Center">
                        <Grid>
                            <Image Source="/Teacher/Resources/logo.png" Width="200" Height="200" />
                        </Grid>
                    </StackPanel>

                    <!-- Navigation Menu -->
                    <StackPanel Grid.Row="1" Margin="0,20,0,0">
                        <Button Content="📚 Quản Lý Khóa Học" 
                                Style="{StaticResource SidebarButtonStyle}"
                                Click="Button_Click"/>
                        <Button Content="📝 Quản Lý Test" 
                                Style="{StaticResource SidebarButtonStyle}"
                                Click="Button_Click"/>
                        <Button Content="📄 Quản Lý Tài Liệu" 
                                Style="{StaticResource SidebarButtonStyle}"
                                Click="Button_Click"/>
                        <Button Content="📈 Quản Lý Tiến Độ" 
                                Style="{StaticResource SidebarButtonStyle}"
                                Click="Button_Click"/>
                    </StackPanel>

                    <!-- Bottom Image -->
                    <Border Grid.Row="2" 
                            Background="#FF2E5AA8" 
                            CornerRadius="12" 
                            Margin="15,0,15,20"
                            Height="120">
                        <StackPanel HorizontalAlignment="Center" 
                                  VerticalAlignment="Center">
                            <TextBlock Text="📖" FontSize="40" HorizontalAlignment="Center"/>
                            <TextBlock Text="Learning" 
                                     Foreground="White" 
                                     FontSize="14" 
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" 
                        Background="#FF3366CC" 
                        CornerRadius="0,15,0,0">
                    <Grid Margin="30,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Window Controls -->
                        <StackPanel Grid.Column="0" 
                                  Orientation="Horizontal" 
                                  VerticalAlignment="Center">
                            <Button Content="➖" 
                                  Width="30" 
                                  Height="30" 
                                  Background="#FFFF9800"
                                  Click="Minimize_Click"
                                  Margin="0,0,5,0"/>
                            <Button Content="🔲" 
                                  Width="30" 
                                  Height="30" 
                                  Background="#FF4CAF50"
                                  Click="Maximize_Click"
                                  Margin="0,0,5,0"/>
                            <Button Content="❌" 
                                  Width="30" 
                                  Height="30" 
                                  Background="#FFF44336"
                                  Click="CloseApp_Click"/>
                        </StackPanel>

                        <!-- User Info -->
                        <StackPanel Grid.Column="1" 
                                  Orientation="Horizontal" 
                                  VerticalAlignment="Center">
                            <Border Background="White" 
                                  CornerRadius="20" 
                                  Width="40" 
                                  Height="40"
                                  Margin="0,0,15,0">
                                <TextBlock Text="👤" 
                                         FontSize="20" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" Margin="0,0,20,0">
                                <TextBlock Text="Nguyen Van A" 
                                         Foreground="White" 
                                         FontWeight="Bold"
                                         FontSize="14"/>
                                <TextBlock Text="Giáo viên" 
                                         Foreground="#FFE0E0E0" 
                                         FontSize="12"/>
                            </StackPanel>
                            <Button Content="🚪 Đăng xuất" 
                                  Background="#FFDC3545" 
                                  Width="120" 
                                  Height="40"
                                  Click="Logout_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                              CornerRadius="8" 
                                              Padding="10,8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <Border Grid.Row="1" 
                        Background="White" 
                        CornerRadius="0,0,15,0"
                        Margin="0,2,0,0">
                    <ContentControl x:Name="MainContent" 
                                  Margin="20"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>