            <Button Name="PrevButton" Content="&lt; TrÆ°á»›c" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Click="PrevButton_Click" IsEnabled="False"/>
            <TextBlock Name="PageInfo" Text="Trang 1 / 1" VerticalAlignment="Center" Margin="10,0"/>
